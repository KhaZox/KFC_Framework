    <script>
        $(document).ready(function () {
            $('#statusSelect').change(function () {
                const selectedStatus = $(this).val();

                // Remove previous color classes
                $('#orderTable .status').removeClass('bg-success-order bg-notreceived-order bg-process-order bg-shipping-order bg-danger ');

                // Add new color class based on selected status
                switch (selectedStatus) {
                    case '1':
                        $('#orderTable .status').addClass('bg-success-order').text('Đang vận chuyển');
                        break;
                    case '2':
                        $('#orderTable .status').addClass('bg-notreceived-order').text("Chưa nhận hàng");
                        break;
                    case '3':
                        $('#orderTable .status').addClass('bg-shipping-order').text("Đang vận chuyển");
                        break;
                    case '4':
                        $('#orderTable .status').addClass('bg-process-order').text("Đang xử lý");
                        break;
                    case '5':
                        $('#orderTable .status').addClass('bg-danger').text("Đã hủy");
                        break;
                    default:
                        break;
                }
            });
        });

        var checkboxAll = $('#checkbox-all')
        var orderItemCheckbox = $('input[name="orderId[]"]')

        checkboxAll.change(function () {
            var isChecked = $(this).prop('checked')
            orderItemCheckbox.prop('checked', isChecked)
        })

        //order item checkbox change
        orderItemCheckbox.change(function () {
            var isChecked = orderItemCheckbox.length === $('input[name="orderId[]"]:checked').length
            checkboxAll.prop('checked', isChecked)
        })

        $(document).ready(() => {
            $('#orderTable').DataTable({
                columnDefs: [{ orderable: false, targets: 5 }],
                "scrollY": "400px",
                "scrollCollapse": true,
                "paging": true,
                select: true,
                processing: true,
                lengthMenu: [10, 25, 50, 100],
                responsive: true,
            })
        })
    </script>
