<form class="container">
    <div class="mb-3 row">
        <label for="idProduct" class="col-sm-2 col-form-label fw-bold">Mã sản phẩm</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="idProduct">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="nameProduct" class="col-sm-2 col-form-label fw-bold">Tên sản phẩm</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nameProduct">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="typeProduct" class="col-sm-2 col-form-label fw-bold">Loại sản phẩm</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="typeProduct">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="discountProduct" class="col-sm-2 col-form-label fw-bold">Mã giảm giá</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="discountProduct">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="priceProduct" class="col-sm-2 col-form-label fw-bold">Giá bán</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="priceProduct">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="desProduct" class="col-sm-2 col-form-label fw-bold">Mô tả</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="desProduct"></textarea>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="formFileLg" class="col-sm-2 col-form-label fw-bold">Chọn hình ảnh</label>
        <div class="col-sm-10">
            <label style="cursor: pointer" for="formFileLg" class="fw-bold align-middle border border-1 rounded-2 p-2 pe-auto">Import Image<ion-icon class="align-middle ms-2" name="image"></ion-icon></label>
            <input class="form-control form-control-lg" id="formFileLg" type="file" hidden onchange="displayFileName(this)">
            <div class="mt-2" id="fileNameDisplay"></div>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-2">&#160;</div>
        <div class="col-sm-10">
            <button class="btn btn-danger fw-bold">SAVE</button>
        </div>
    </div>
</form>
<script>
    function displayFileName(input) {
        const fileName = input.files[0].name;
        document.getElementById('fileNameDisplay').innerText = fileName;
    }
</script>