
@{
    ViewBag.Title = "salesReport";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-flex">
    <select class="form-select w-25 rounded-pill me-4" aria-label="Default select example">
        <option selected>Chọn thời gian bắt đầu</option>
        <option value="1">Tháng 1</option>
        <option value="2">Tháng 2</option>
        <option value="3">Tháng 3</option>
        <option value="4">Tháng 4</option>
    </select>
    <select class="form-select w-25 rounded-pill" aria-label="Default select example">
        <option selected>Chọn thời gian kết thúc</option>
        <option value="1">Tháng 1</option>
        <option value="2">Tháng 2</option>
        <option value="3">Tháng 3</option>
        <option value="4">Tháng 4</option>
    </select>
</div>
<div class="">
    <p class="fw-bold fs-5 mt-2">Bảng Phân Tích Báo Cáo Các Doanh Thu</p>
    <table id="salesTable" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Tháng</th>
                <th scope="col">Doanh thu</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <tr>
                <td>Tháng 1</td>
                <td>100.000.000 VNĐ</td>
            </tr>
            <tr>
                <td>Tháng 2</td>
                <td>102.000.000 VNĐ</td>
            </tr>
            <tr>
                <td>Tháng 3</td>
                <td>104.000.000 VNĐ</td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <p class="fw-bold fs-5 mt-2">Biểu Đồ Doanh Thu</p>

</div>
@section scripts{
    <script>
        $(document).ready(() => {
            $('#salesTable').DataTable({
                "scrollY": "400px",
                "scrollCollapse": true,
                "paging": true,
                select: true,
                processing: true,
                lengthMenu: [10, 25, 50, 100],
                responsive: true,
            })
        })
    </script>    
}