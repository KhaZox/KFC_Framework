
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container text-center wrapper_login">
    <div class="row">
        <div class="col-6 login_img" style="background-color: #e21e2d; padding: 0">
            <img class="img_login_shop" src="https://static.kfcvietnam.com.vn/images/web/signin/lg/signin.jpg?v=XgqM7g" />
        </div>
        <div class="col-6 wrapper-control-login">
            <form class="text-start form-login form">
                <h2 class="login_title">TẠO TÀI KHOẢN</h2>
                <div class="Body_form mt-4">
                    <input class="form_input" id="lastname" name="lastname" rules="required" type="text" required>
                    <label for="lastname" class="form-label">Họ của bạn</label>
                    <div class="form-message"></div>
                </div>
                <div class="Body_form mt-4">
                    <input class="form_input" id="name" name="name" rules="required" type="text" required>
                    <label for="name" class="form-label">Tên của bạn</label>
                    <div class="form-message"></div>
                </div>
                <div class="Body_form mt-4">
                    <input class="form_input" id="phone" name="phone" rules="required" type="text" required>
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <div class="form-message"></div>
                </div>
                <div class="Body_form mt-4">
                    <input class="form_input" id="email" name="email" rules="required|email" type="email" required>
                    <label for="email" class="form-label">Địa chỉ email của bạn</label>
                    <div class="form-message"></div>
                </div>
                <div class="Body_form mt-4">
                    <input class="form_input input-password" id="password" name="password" rules="required|min:6" type="password" required>
                    <label for="password" class="form-label">Mật khẩu</label>
                    <div class="form-message"></div>
                    <span class="icon-password"><ion-icon name="eye"></ion-icon></span>
                </div>
                <div class="Body_form Body_form-cr form-check mt-4">
                    <input type="checkbox" id="checkbox" class="form-check-input" name="checkbox" rules="checkbox">
                    <label class="form-check-label" for="checkbox">
                        Tôi đã đọc và đồng ý với các <strong>Chính Sách Hoạt Động</strong> và <strong>Chính Sách Bảo Mật Thông Tin của KFC Việt Nam.</strong>
                    </label>
                    <div class="form-message"></div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-custom btn-danger">Tạo Tài Khoản</button>
                </div>
                <div class="mb-3 text-center">
                    <span>Bạn đã có tài khoản? <strong class="text-decoration-underline"><a href="/Account">Đăng nhập</a></strong></span>
                </div>
            </form>
        </div>
    </div>
</div>

@section css{
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/Account.css" />
}
@section scripts{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/Account.js"></script>
